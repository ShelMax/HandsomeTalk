<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.sofac.handsometalk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".HandsomeTalk"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoBar">
        <activity android:name=".view.MainCustomActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AuthorizationActivity"
            android:theme="@style/AppTheme.NoBar" />
        <activity
            android:name=".view.RegistrationActivity"
            android:theme="@style/AppTheme.NoBar" />
        <activity android:name=".view.BaseActivity" />
        <activity android:name=".view.SplashActivity" />
        <activity
            android:name=".view.NavigationActivity"
            android:theme="@style/AppTheme.NoBar" />
        <activity android:name=".view.DetailEstimateActivity"></activity>
    </application>

</manifest>