<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.sofac.handsometalk.view.fragments.InfoFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#e8d8be"
        android:scaleType="fitStart"
        android:src="@drawable/image_info_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_area_style"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"

                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/about_me_for_me_text"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal"
                            android:text="@string/text_1_about"
                            android:textColor="@color/colorBlack" />

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="12dp"
                                android:text="@string/why"
                                android:textColor="@color/colorBlack"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintHorizontal_bias="0.417"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="이벤트미"
                                android:textColor="@color/colorBlack"
                                card_view:layout_constraintBottom_toTopOf="@+id/textView6"
                                card_view:layout_constraintStart_toEndOf="@+id/textView"
                                card_view:layout_constraintTop_toTopOf="@+id/textView" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="EVENT ME"
                                android:textColor="@color/colorBlack"
                                card_view:layout_constraintBottom_toBottomOf="@+id/textView"
                                card_view:layout_constraintStart_toEndOf="@+id/textView"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:text="이벤트미는 고객사랑의 정신과 "
                                android:textSize="12sp"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:text="엄격한 시술 원칙이 있습니다."
                                android:textSize="12sp"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:text="+"
                                android:textColor="#FF267993"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                card_view:layout_constraintEnd_toStartOf="@+id/textView10"
                                card_view:layout_constraintHorizontal_bias="0.5"
                                card_view:layout_constraintHorizontal_chainStyle="packed"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView8" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:text="–"
                                android:textColor="#FF267993"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                card_view:layout_constraintEnd_toStartOf="@+id/textView11"
                                card_view:layout_constraintHorizontal_bias="0.5"
                                card_view:layout_constraintStart_toEndOf="@+id/textView9"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView8" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:text="×"
                                android:textColor="#FF267993"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                card_view:layout_constraintEnd_toStartOf="@+id/textView12"
                                card_view:layout_constraintHorizontal_bias="0.5"
                                card_view:layout_constraintStart_toEndOf="@+id/textView10"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView8" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp"
                                android:text="÷"
                                android:textColor="#FF267993"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintHorizontal_bias="0.5"
                                card_view:layout_constraintStart_toEndOf="@+id/textView11"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView8" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="편안함 \n더하기"
                                card_view:layout_constraintEnd_toEndOf="@+id/textView9"
                                card_view:layout_constraintHorizontal_bias="0.521"
                                card_view:layout_constraintStart_toStartOf="@+id/textView9"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView9" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="통증 \n빼기 "
                                card_view:layout_constraintEnd_toEndOf="@+id/textView10"
                                card_view:layout_constraintHorizontal_bias="0.0"
                                card_view:layout_constraintStart_toStartOf="@+id/textView10"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView10" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="효과 \n곱하기 "
                                card_view:layout_constraintEnd_toEndOf="@+id/textView11"
                                card_view:layout_constraintHorizontal_bias="0.347"
                                card_view:layout_constraintStart_toStartOf="@+id/textView11"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView11" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="부담 \n나누기"
                                card_view:layout_constraintEnd_toEndOf="@+id/textView12"
                                card_view:layout_constraintHorizontal_bias="0.222"
                                card_view:layout_constraintStart_toStartOf="@+id/textView12"
                                card_view:layout_constraintTop_toBottomOf="@+id/textView12" />
                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/why_event_me"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="fill_horizontal"
                            android:text="@string/about_me_text2"
                            android:textColor="@color/colorBlack" />



                    </LinearLayout>

                </ScrollView>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
